@{
    ViewBag.Title = "Contact";
    Layout = null;
}

<header>
    <section id="menu">
        <ul>
            <a @Html.ActionLink("Inicio", "Index", "Home")
        </ul>

    </section>
</header>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
 <link href="~/Content/Estilos/Contacto.css" rel="stylesheet" />
<section>
    <div class="container contact-form">
        <div class="contact-image">
            <img src="~/resources/lifefit.png" alt="rocket_contact" />
        </div>
        <form method="post">
            <h3>!Déjanos tu duda y nos contactamos de manera inmediata!</h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="text" name="txtName" class="form-control" placeholder="Nombre" value="" />
                    </div>
                    <div class="form-group">
                        <input type="text" name="txtEmail" class="form-control" placeholder="Correo" value="" />
                    </div>
                    <div class="form-group">
                        <input type="text" name="txtPhone" class="form-control" placeholder="Celular" value="" />
                    </div>
                    <div class="boton-1">
                        <input type="submit" name="btnSubmit" class="btn-1" value="Enviar" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <textarea name="txtMsg" class="form-control" placeholder="Comentario" style="width: 100%; height: 150px;"></textarea>
                    </div>
                </div>
            </div>
        </form>


    </div>

</section>

<footer>
    <p> LifeFIT &copy;. Todos los derechos reservados</p>
</footer>